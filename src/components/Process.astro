const steps = [
	{
		title: 'Discovery',
		copy: 'We align on your stationâ€™s goals, streaming setup, and brand tone.'
	},
	{
		title: 'Design',
		copy: 'We craft a focused UI that feels premium and stays simple for listeners.'
	},
	{
		title: 'Build',
		copy: 'Native iOS development with CarPlay, Watch, iPad, and Mac support.'
	},
	{
