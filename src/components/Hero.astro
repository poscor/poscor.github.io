---
const requestDemoLink =
	"mailto:support@poscor.ro?subject=" + encodeURIComponent("Request a POSCOR demo");
---

<section class="py-5" id="top">
	<div class="container py-lg-4">
		<div class="row align-items-center g-5">
			<div class="col-12 col-lg-6">
				<p class="text-uppercase text-primary fw-semibold mb-2">POSCOR</p>
				<h1 class="display-5 fw-semibold">Native iOS app for your radio station</h1>
				<p class="lead text-secondary">
					Premium UX, a simple process, and a cost that stays affordable compared to a
					traditional agency.
				</p>

				<div class="d-flex flex-wrap gap-2 my-3">
					<span class="badge text-bg-light border">CarPlay</span>
					<span class="badge text-bg-light border">Apple Watch</span>
					<span class="badge text-bg-light border">iPad</span>
					<span class="badge text-bg-light border">Mac (Apple Silicon)</span>
				</div>

				<div class="d-flex flex-wrap gap-3 mt-4">
					<a class="btn btn-primary btn-lg" href={requestDemoLink}>
						Request a demo
					</a>
					<a class="btn btn-outline-secondary btn-lg" href="#screenshots">
						See the app
					</a>
				</div>
			</div>
			<div class="col-12 col-lg-6 text-center">
				<img
					src="/images/screen1.png"
					alt="POSCOR iPhone app now playing screen"
					class="img-fluid rounded-4"
					width="320"
					height="692"
					fetchpriority="high"
				/>
			</div>
		</div>
	</div>
</section>
